<h1>{{title}}</h1>
<p>Welcome to the Reflection Page</p>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <th>Title</th>
        <th>Title of Works</th>
        <th>Type of Works</th>
        <th></th>
    </thead>
    <tbody>
        {{#each dataset}}
           <tr>
              <td>{{this.title}}</td>
              <td>{{this.works}}</td>
              <td>{{this.type}}</td>
              <td>
                <a href="/read/{{this._id}}" class="btn btn-dark">detail</a>
                <a href="/edit/{{this._id}}" class="btn btn-dark">edit</a>
                <a href="/delete/{{this._id}}" class="btn btn-danger">delete</a>
              </td>
           </tr>
        {{/each}}
    </tbody>
</table>